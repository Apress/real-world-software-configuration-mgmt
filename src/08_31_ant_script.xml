<project name="hello" default="all" basedir=".">

     <property name="src" value="."/>
     <property name="dist"  value="dist"/>
	
     <target name="init">
          <mkdir dir="${dist}"/>
     </target>

     <target name="hello" depends="init">
          <!-- Compile all of the java files in src to dist -->
          <javac srcdir="${src}" destdir="${dist}"/>
     </target>

</project>

